@model Compline.Teste.Commons.Entidades.Tarefa

@{
    ViewBag.Title = "Delete";
}

<h2>Remover</h2>

<h3>Tem certeza que deseja remover essa tarefa ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Prioridade")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prioridade.Descricao)
        </dd>

        <dt>
            @Html.DisplayName("Nome da lista")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ListaDeTarefas.NomeLista)
        </dd>

    </dl>

    @using (Html.BeginForm("ConfirmDelete","Tarefas",FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ListaDeTarefasId)

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para listagem de tarefas", "Index", new { idLista = Model.ListaDeTarefasId})
        </div>
    }
</div>
