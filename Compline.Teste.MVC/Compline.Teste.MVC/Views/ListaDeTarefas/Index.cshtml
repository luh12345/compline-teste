@model IEnumerable<Compline.Teste.Commons.Entidades.ListaDeTarefas>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem das Listas de Tarefas</h2>

<p>
    @Html.ActionLink("Criar lista", "Form","ListaDeTarefas")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nome da Lista")
        </th>
        <th>
            @Html.DisplayName("Cadastrado em")
        </th>
        <th>
            @Html.DisplayName("Atualizado em")
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayName(item.NomeLista)
        </td>
        <td>
            @Html.DisplayName(item.CreatedAt.ToShortDateString())
        </td>
        <td>
            @Html.DisplayName(item.UpdatedAt.ToShortDateString())
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }) |
            @Html.ActionLink("Remover", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
